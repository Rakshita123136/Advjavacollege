<%
try {
    if(request.getParameter("t1") != null) {
        int a, b;
        String c;
        a = Integer.parseInt(request.getParameter("t1"));
        b = Integer.parseInt(request.getParameter("t2"));
        c = request.getParameter("opt");

        if(c.equals("+")) {
            out.println(a + b);
        } else if(c.equals("-")) {
            out.println(a - b);
        } else if(c.equals("*")) {
            out.println(a * b);
        } else if(c.equals("/")) {
            out.println(a / b);
        }
    }
} catch(Exception ex) {
    ex.printStackTrace();
}
%>
